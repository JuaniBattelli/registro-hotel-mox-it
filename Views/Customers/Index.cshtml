@model IEnumerable<registro_hotel_mox_it.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
        <button class="btn btn-primary btn-sm"><a asp-action="Create" style="color: white; text-decoration: none;">New Customer</a></button>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                <button class="btn btn-dark btn-sm"><a asp-action="Details" asp-route-id="@item.Id" style="color: white; text-decoration: none;">Details</a></button>
                <button class="btn btn-warning btn-sm"><a asp-action="Edit" asp-route-id="@item.Id" style="color: white; text-decoration: none;">Edit</a></button>
                <button class="btn btn-primary btn-sm"><a asp-action="Delete" asp-route-id="@item.Id" style="color: white; text-decoration: none;">Delete</a></button>

                
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>


